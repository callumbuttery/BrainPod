<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BrainPod.Statistics"
             Title="Analysis">
    <ContentPage.Content>
        <ScrollView BackgroundColor="#7C40A9">
            <StackLayout >
                <StackLayout>

                    <Frame CornerRadius="100" BackgroundColor="White" Margin="100,20,100,0">
                            <Image x:Name="Logo"
                       VerticalOptions="StartAndExpand" 
                       WidthRequest="100"
                       HeightRequest="100"
                       Source="https://static.thenounproject.com/png/2500248-84.png"/>
                        </Frame>

                        <Label Text="Here you can analyse your statistics based on the activities you have participated in"
                       VerticalOptions="Start"
                       HorizontalOptions="Center"
                       FontSize="21"
                       HorizontalTextAlignment="Center"
                       Margin="10,10,10,0"
                       TextColor="White"/>
                    </StackLayout>


                    <Frame HasShadow="True" Margin="20,20,20,5" BackgroundColor="White" CornerRadius="40">
                    <StackLayout>
                        <StackLayout>
                            <Frame Margin="50,0,50,0" CornerRadius="40" BackgroundColor="LightSeaGreen">
                                <Label x:Name="overallHappiness"
                                   Text="Journal Stats"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Center"
                                   FontSize="25"
                                   HorizontalTextAlignment="Center"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            </Frame>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,10,0,0">
                            <Label Text="Average Happiness: "
                                   VerticalOptions="Center"
                               HorizontalOptions="Center"
                                   FontSize="20"
                                   Margin="0,0"
                                   TextColor="Gray"/>

                            <Label x:Name="overallHappinessInt"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               FontSize="20"
                               TextColor="#7C40A9"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start">
                            <Label Text="Recorded Journal Entries: "
                                   VerticalOptions="Start"
                               HorizontalOptions="Center"
                                   FontSize="20"
                                   Margin="0,0"
                                   TextColor="Gray"/>

                            <Label x:Name="noOfEntries"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               FontSize="20"
                               TextColor="#7C40A9"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,40,0,0">

                            <Label Text="Last journal date: "
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               FontSize="20"
                               TextColor="Gray"/>

                            <Label x:Name="mostRecentLogDate"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               FontSize="20"
                               TextColor="#7C40A9"/>
                            
                        </StackLayout>


                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start" >

                            <Label Text="Last journal time: "
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               FontSize="20"
                               TextColor="Gray"/>

                            <Label x:Name="mostRecentLogTime"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               FontSize="20"
                               TextColor="#7C40A9"/>

                        </StackLayout>


                    </StackLayout>
                </Frame>



                <Frame Margin="20,10,20,20" HasShadow="True" BackgroundColor="White" CornerRadius="40">
                    <StackLayout>
                        <Frame Margin="50,0,50,20" CornerRadius="40" BackgroundColor="LightSkyBlue">
                            <Label Text="Most Recent Log"
                               VerticalOptions="Start"
                               HorizontalOptions="CenterAndExpand"
                               FontSize="25"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        </Frame>
                        <Frame CornerRadius="30" HasShadow="True" BackgroundColor="#7C40A9">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                    <Frame HasShadow="True" CornerRadius="10" HeightRequest="30" Margin="0,0,0,10">
                                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                            <Label x:Name="logDate" FontSize="25" HorizontalTextAlignment="Center" TextColor="Black" VerticalOptions="Center"/>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,10,0,10">
                                    <Label Text="Rated Happiness - " FontSize="20" HorizontalTextAlignment="Center" TextColor="GhostWhite"/>
                                    <Label x:Name="happinessRating" FontSize="20" HorizontalTextAlignment="Center" TextColor="white"/>
                                </StackLayout>
                                <Label x:Name="logData" FontSize="22" HorizontalTextAlignment="Center" TextColor="White" Margin="0,10,0,10" FontAttributes="Italic"/>

                                <StackLayout Margin="0,10,0,0">
                                    <Label Text="Journal Mood"
                                   HorizontalOptions="Center"
                                   Margin="0,4,0,0"
                                   FontSize="20"
                                   FontAttributes="Italic"
                                    TextColor="White"/>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                    <Image x:Name="sadLogo"
                               VerticalOptions="Start"
                               HorizontalOptions="Center"
                               HeightRequest="100"/>
                                    <Image x:Name="middleLogo"
                               VerticalOptions="Start"
                               HorizontalOptions="Center"
                               HeightRequest="100"/>
                                    <Image x:Name="HappinessLogo"
                               VerticalOptions="Start"
                               HorizontalOptions="Center"
                               HeightRequest="100"/>

                                </StackLayout>
                            </StackLayout>
                        </Frame>


                        <StackLayout>
                            <Label Text="Activities"
                                   HorizontalOptions="Center"
                                   FontSize="20"
                                   Margin="0,25,0,10"
                                   FontAttributes="Bold"/>
                        </StackLayout>

                        <Frame HasShadow="true" CornerRadius="40" BackgroundColor="#7C40A9">
                            <StackLayout>
                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                <StackLayout>
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="WorkFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/1730628-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40"
                                                 Clicked="addActivityToList"
                                                 ClassId="WorkButton"
                                                 x:Name="WorkButton"/>

                                        </StackLayout>
                                    </Frame>
                                    <Label Text="Work" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>

                                <StackLayout Margin="5,0,5,0">
                                    <StackLayout>
                                        <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="StudyFrame">
                                            <StackLayout>
                                                <ImageButton Source="https://static.thenounproject.com/png/3316464-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40" 
                                                 Clicked="addActivityToList"
                                                 ClassId="StudyButton"
                                                 x:Name="StudyButton"/>
                                            </StackLayout>
                                        </Frame>
                                            <Label Text="Study" HorizontalTextAlignment="Center" TextColor="White"/>
                                    </StackLayout>
                                </StackLayout>

                                <StackLayout Margin="5,0,5,0">
                                    <StackLayout>
                                        <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="ExerciseFrame">
                                            <StackLayout>
                                                <ImageButton Source="https://static.thenounproject.com/png/2873592-200.png"
                                                     BackgroundColor="White"
                                                     HeightRequest="40"
                                                     Clicked="addActivityToList"
                                                     ClassId="ExerciseButton"
                                                     x:Name="ExerciseButton"/>

                                            </StackLayout>
                                        </Frame>
                                            <Label Text="Exercise" HorizontalTextAlignment="Center" TextColor="White"/>
                                    </StackLayout>
                                </StackLayout>

                                <StackLayout>
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="StretchFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/377668-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40"
                                                 Clicked="addActivityToList"
                                                 ClassId="StretchButton"
                                                 x:Name="StretchButton"/>
                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Stretch" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>
                            </StackLayout>





                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,10,0,10">
                                <StackLayout>
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="SocialFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/62507-200.png"
                                                                 BackgroundColor="White"
                                                                 HeightRequest="40"
                                                                 Clicked="addActivityToList"
                                                                 ClassId="SocialiseButton"
                                                                 x:Name="SocialiseButton"/>
                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Socialise" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>




                                <StackLayout Margin="5,0,5,0">
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="GameFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/3482923-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40" 
                                                 Clicked="addActivityToList"
                                                 ClassId="GameButton"
                                                 x:Name="GameButton"/>
                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Game" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>

                                <StackLayout Margin="5,0,5,0">
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="NapFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/486916-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40"
                                                 Clicked="addActivityToList"
                                                 ClassId="NapButton"
                                                 x:Name="NapButton"/>
                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Nap" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>


                                <StackLayout>
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="MovieFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/1179859-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40"
                                                 Clicked="addActivityToList"
                                                 ClassId="MovieButton"
                                                 x:Name="MovieButton"/>
                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Watch Movie" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>
                            </StackLayout>








                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                <StackLayout>
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="AlcoholFrame">
                                        <StackLayout>
                                            <StackLayout>
                                                <ImageButton Source="https://static.thenounproject.com/png/1529167-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40"
                                                 Clicked="addActivityToList"
                                                 ClassId="AlcoholButton"
                                                 x:Name="AlcoholButton"/>

                                            </StackLayout>
                                        </StackLayout>

                                    </Frame>
                                        <Label Text="Alcohol" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>

                                <StackLayout Margin="5,0,5,0">
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="EatOutFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/2793853-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40" 
                                                 Clicked="addActivityToList"
                                                 ClassId="EatOutButton"
                                                 x:Name="EatOutButton"/>

                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Eat out" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>

                                <StackLayout Margin="5,0,5,0">
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="DateFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/2219349-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40"
                                                 Clicked="addActivityToList"
                                                 ClassId="DateButton"
                                                 x:Name="DateButton"/>

                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Date" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>

                                <StackLayout>
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="ShoppingFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/3498011-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40" 
                                                 Clicked="addActivityToList"
                                                 ClassId="ShoppingButton"
                                                 x:Name="ShoppingButton"/>

                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Shopping" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>
                            </StackLayout>




                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,10,0,0">
                                <StackLayout>
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="ReadFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/1902637-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40"
                                                 Clicked="addActivityToList"
                                                 ClassId="ReadButton"
                                                 x:Name="ReadButton"/>

                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Read" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>

                                <StackLayout Margin="5,0,5,0">
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="CleanFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/2323617-200.png"
                                                     BackgroundColor="White"
                                                     HeightRequest="40" 
                                                     Clicked="addActivityToList"
                                                     ClassId="CleanButton"
                                                     x:Name="CleanButton"/>
                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Clean" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>


                                <StackLayout Margin="5,0,5,0">
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="EatHealthyFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/2995904-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40"
                                                 Clicked="addActivityToList"
                                                 ClassId="EatHealthyButton"
                                                 x:Name="EatHealthyButton"/>
                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Eat Healthy" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>

                                <StackLayout>
                                    <Frame HasShadow="True" CornerRadius="100" HeightRequest="40" WidthRequest="40" x:Name="EarlySleepFrame">
                                        <StackLayout>
                                            <ImageButton Source="https://static.thenounproject.com/png/2745802-200.png"
                                                 BackgroundColor="White"
                                                 HeightRequest="40" 
                                                 Clicked="addActivityToList"
                                                 ClassId="EarlySleepButton"
                                                 x:Name="EarlySleepButton"/>

                                        </StackLayout>
                                    </Frame>
                                        <Label Text="Early Sleep" HorizontalTextAlignment="Center" TextColor="White"/>
                                </StackLayout>
                            </StackLayout>

                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </Frame>
            </StackLayout>
                
        </ScrollView>
    </ContentPage.Content>
        
</ContentPage>