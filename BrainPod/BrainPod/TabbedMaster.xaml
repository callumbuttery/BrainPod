<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BrainPod.TabbedMaster"
             xmlns:local="clr-namespace:BrainPod">

    
        <ContentPage Title="Summary" IconImageSource="baseline_history_black_18dp.png">
        <ContentPage.Content>
            <StackLayout BackgroundColor="#c4ebf2">
                <Label x:Name="WelcomeMessage"
                 VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   Margin="10"
                   FontAttributes="Bold"
                   TextColor="Black"
                   FontSize="25"/>
                
                <Label Text="A summary of your logs!"
                 VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   Margin="10"
                   FontAttributes="Bold"
                   TextColor="DimGray"
                   FontSize="20"/>

                <ListView x:Name="listOfLogs" HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout BackgroundColor="White" Margin = "10,10,10,10">
                                    <Label Text="Log Date" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding logTime}" FontSize="15" HorizontalTextAlignment="Center"/>
                                    <Label Text="Happiness Rating" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding sliderValue}" FontSize="15" HorizontalTextAlignment="Center"/>
                                    <Label Text="Log Data" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding logData}" FontSize="15" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </ViewCell>
                            
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    
                </ListView>



            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
    
    
    
 
    <ContentPage Title="Check up">
        <ContentPage.Content>
            <StackLayout BackgroundColor="#c4ebf2">
                <Label Text="Log how you're feeling"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   Margin="10"
                   FontAttributes="Bold"
                   TextColor="Black"
                   FontSize="25"/>

                <Image x:Name="LogoWithoutText"
                   HorizontalOptions="Center"/>

                <Label Text="How are you feeling out of 10?"
                HorizontalOptions="CenterAndExpand" 
                   FontSize="20"
                   TextColor="Black"/>
                

                
                <StackLayout>
                    <Slider Minimum="0" Maximum="10" 
                    ValueChanged="Slider_ValueChanged" 
                    x:Name="DayRatingSlider"
                    Margin="0"
                    BackgroundColor="White"
                    HeightRequest="50"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="350"
                      />
                </StackLayout>

                <Label Text="0" x:Name="SliderValue" FontSize="40"
                   HorizontalOptions="Center"
                   Margin="0"/>

                <StackLayout>
                    <Editor x:Name="JournalEntry"
                    Placeholder="Journal your feelings"
                    HorizontalOptions="Center"
                    IsSpellCheckEnabled="True"
                    IsTextPredictionEnabled="True"
                    Completed="JournalEntry_Completed"
                    WidthRequest="350"
                    HeightRequest="300"
                    FontAttributes="Bold" 
                    BackgroundColor="White"
                    MaxLength="500"
                    TextChanged="JournalEntry_TextChanged"/>
                </StackLayout>


                <Button x:Name="LogBtn" Text="Log Journal"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="200"
                    Margin="10"
                    BackgroundColor="PaleVioletRed"
                    Clicked="LogBtn_Clicked"/>

            </StackLayout>

        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Zen Space">
        <ContentPage.Content>
            <StackLayout BackgroundColor="#c4ebf2">
                
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Account">
        <ContentPage.Content>
            <StackLayout BackgroundColor="#c4ebf2">
                <Label Text="Account info page"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>

                <Label x:Name="userEmailDisplay"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Margin="25"
                       FontAttributes="Bold"/>
                <Label x:Name="userIDDisplay"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Margin="25"
                       FontAttributes="Bold"/>
                <Label x:Name="userFirstDisplay"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Margin="25"
                       FontAttributes="Bold"/>
                <Label x:Name="userLastDisplay"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Margin="25"
                       FontAttributes="Bold"/>
                

                <Button Text="Sign out"
                        VerticalOptions="Center"
                       HorizontalOptions="Center"
                        Clicked="Button_Clicked"/>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
    
</TabbedPage>