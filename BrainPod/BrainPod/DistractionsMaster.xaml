<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainPod.DistractionsMaster">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Distract yourself from an anxiety attack "
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />

            <StackLayout>
                <Frame BorderColor="Black">
                    <Button Text="Maths"
                            FontSize="20"
                            Clicked="LoadMaths"/>
                </Frame>
            </StackLayout>

            <StackLayout>
                <Frame BorderColor="Black">
                    <Button Text="Reaction"
                            FontSize="20"
                            Clicked="LoadReaction"/>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>